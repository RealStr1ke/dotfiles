;; Variables

(defpoll updates 
    :interval "5m" 
    "~/.config/waybar/scripts/updates.sh"
)


;; Main Widget
(defwidget updates []
    (button 
        :orientation "horizontal"
        :halign "center"
        :class "mod_updates"

        updates
    )
)
