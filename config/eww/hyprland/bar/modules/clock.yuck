;; =========================
;; |         Clock         |
;; =========================


;; Variables

(defpoll date_time
    :interval "1s"
    "date +\"  %A, %B %d, %Y (%V) | %r\""
)

(defpoll date_time_alt
    :interval "1s"
    "date +\"  %a, %b %d, %Y | %I:%M %p\""
)


;; Main Widget
(defwidget clock []
    (box 
        :orientation "horizontal"
        :halign "center"
        :class "bar.clock"

        date_time
    )
)
