(defwidget launcher []
    (box
        :class "mod_launcher"
        :orientation "h"
        (button
            :onclick "~/.dotfiles/config/rofi/launcher.sh drun"
            :onrightclick "~/.dotfiles/config/rofi/launcher.sh run"
            (image
                :class "mod_launcher-icon"
                :path "assets/images/hyprland-logo.png"
                :image-width 24
            )
        )
    )
)