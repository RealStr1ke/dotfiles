/*****----- Configuration -----*****/
configuration {
	modi:                       "drun,run,filebrowser,window";
    show-icons:                 true;
    display-drun:               "Apps";
    display-run:                "Run";
    display-filebrowser:        "Explorer";
    display-window:             "Windows";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c} · {t}";
}

/*****----- Global Properties -----*****/
* {
    font:                        "Caskaydia Cove Nerd Font 10";
    background:                  @bg-col;
    background-alt:              @bg-col-light;
    foreground:                  @fg-col;
    selected:                    #b4befe;
    active:                      #cba6f7;
    urgent:                      #f38ba8;

    bg-col:  #11111b;
    bg-col-light: #181825;
    bg-col-lighter: #1e1e2e;
    border-col: #1e1e2e;
    selected-col: #1e1e2e;
    blue: #89b4fa;
    fg-col: #cdd6f4;
    fg-col2: #f38ba8;
    grey: #6c7086;
}

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       500px;
    x-offset:                    0px;
    y-offset:                    0px;

    /* properties for all widgets */
    enabled:                     true;
    border:                      2px;
    border-radius:               8px;
    cursor:                      "default";
    background-color:            @bg-col;
    border-color:                @active;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     0px;
    background-color:            @bg-col;
    orientation:                 horizontal;
    children:                    [  "listbox" ];
    border:                      3px;
    border-color:                @active;
}

